@model librosmodel
@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header"> 
        Agregar Libros
    </div>
    <div class="card-body">
        <form asp-action="Guardar" asp-controller="Mantenedor" method="post" id="forms" onsubmit="enviarfomulario(event);">
            <div class="mb-3">
                <label  class="form-label">Codigo de Libro:</label>
                <input asp-for="id_libro" type="text" class="form-control" required>
                
            </div>
            <div class="mb-3">
                <label class="form-label">Descripcion:</label>
                <input asp-for="descripcion" type="text" class="form-control" required>
            </div>
            <div class="mb-3">
                <label class="form-label">asignatura:</label>
                
                <input asp-for="asignatura" type="text" class="form-control" required>
            </div>

            <div class="mb-3">
                <label class="form-label">stock:</label>
                <input asp-for="stock" type="text" class="form-control" required>
            </div>
            
          
            
           
            <button type="submit" class="btn btn-primary"><i class="bi bi-download"></i> Guardar</button>
            <a asp-action="Listar" asp-controller="Mantenedor" class="btn btn-warning"><i class="bi bi-arrow-up-left-square"></i>  Cerrar</a>
        </form>
    </div>
</div>
@section Scripts{
    <script>
        function enviarfomulario(e){
            e.preventDefault();
            Swal.fire({
                title: '¿Quieres guardas los cambios?',
                text: "No podrás revertir esto.!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'OK!'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Registro Correctamente Guardado!',
                        'Tu información ha sido Guardada.',
                        'success'
                    ).then(function () {
                        
                    const formulario = document.getElementById('forms');
                    formulario.submit();

                    })
                    
                }
            })
        }
    </script>
}