@model asignaturamodel
@{
    ViewData["Title"] = "Guardar_asi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header">
        Agregar Asignatura
    </div>
    <div class="card-body">
        <form asp-action="Guardar_asi" asp-controller="Mantenedor" method="post" id="forms" onsubmit="enviarfomulario(event);">
            <div class="mb-3">
                <label class="form-label">Codigo de Asignatura:</label>
                <input asp-for="id_asig" type="text" class="form-control" required>

            </div>
            <div class="mb-3">
                <label class="form-label">Descripcion:</label>
                <input asp-for="descripcion" type="text" class="form-control" required>
            </div>
            <div class="mb-3">
            <label class="form-label">Estado:</label>
            <select asp-for="estado" class="form-control">
                    <option selected disabled>---Seleccionar---</option>
                <option value="1">Activo</option>
                <option value="0">Inactivo</option>

            </select>

            </div>
            <button type="submit" class="btn btn-primary"><i class="bi bi-download"></i> Guardar</button>
            <a asp-action="Listar" asp-controller="Mantenedor" class="btn btn-danger"><i class="bi bi-arrow-up-left-square"></i> Cerrar</a>
        </form>
    </div>
</div>
@section Scripts{
    <script>
        function enviarfomulario(e) {
            e.preventDefault();
            Swal.fire({
                title: '¿Quieres guardas los cambios?',
                text: "No podrás revertir esto.!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'OK!'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Registro Correctamente Guardado!',
                        'Tu información ha sido Guardada.',
                        'success'
                    ).then(function () {

                        const formulario = document.getElementById('forms');
                        formulario.submit();

                    })

                }
            })
        }
    </script>

}